[Unit]
Description=OVOS Dinkum Listener
PartOf=ovos.service
After=ovos.service
After=ovos-messagebus.service

[Service]
Type=notify
Environment=PYTHONPATH=%h/.venv/bin
Environment=PYTHONUNBUFFERED=1
ExecStart=%h/.venv/bin/python %h/.local/bin/systemd/systemd_dinkum_listener.py
TimeoutStartSec=1m
TimeoutStopSec=1m
Restart=on-failure
StartLimitInterval=5min
StartLimitBurst=4
#StartLimitAction=reboot-force
WatchdogSec=30s

[Install]
WantedBy=ovos.service
