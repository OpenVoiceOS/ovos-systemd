[Unit]
Description=OVOS Messagebus
PartOf=ovos.service
After=ovos.service

[Service]
User=ovos #Change this to the user that runs OVOS
Type=notify
Environment=PYTHONPATH=%h/.venv/bin
Environment=PYTHONUNBUFFERED=1
ExecStart=%h/.venv/bin/python %h/.local/bin/systemd/systemd_messagebus.py
TimeoutStartSec=1m
TimeoutStopSec=1m
Restart=on-failure
StartLimitInterval=5min
StartLimitBurst=4
#StartLimitAction=reboot-force
WatchdogSec=30s

[Install]
WantedBy=ovos.service
