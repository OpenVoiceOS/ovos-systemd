[Unit]
Description=OVOS Skills
PartOf=ovos.service
After=ovos.service
After=ovos-messagebus.service

[Service]
User=%u
Type=notify
Environment=PYTHONPATH=%h/.venv/bin
Environment=PYTHONUNBUFFERED=1
ExecStart=%h/.venv/bin/python %h/.local/bin/systemd/systemd_skills.py
TimeoutStartSec=1m
TimeoutStopSec=1m
Restart=on-failure
StartLimitInterval=5min
StartLimitBurst=4

[Install]
WantedBy=ovos.service
